dnsLookup() {
  if [ -z "$1" ]; then
    echo "Usage: dns_records <domain>"
    return 1
  fi

  local DOMAIN=$1
  local RECORD_TYPES=("A" "AAAA" "MX" "TXT" "NS" "CNAME" "SOA")

  get_dns_records() {
    local RECORD_TYPE=$1
    echo "Fetching $RECORD_TYPE records for $DOMAIN..."
    dig +nocmd +noall +answer $DOMAIN $RECORD_TYPE
    echo
  }

  for RECORD_TYPE in "${RECORD_TYPES[@]}"; do
    get_dns_records $RECORD_TYPE
  done
}
